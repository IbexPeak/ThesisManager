@using ThesisManager.Web.Helper
@model ThesisManager.Web.Models.Account.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { role = "form", @class = "form-horizontal" })) {
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)

    @Html.BootstrapLabelAndTextBoxFor(m => m.Login)
    @Html.BootstrapLabelAndPasswordFor(m => m.Password)
}

@Scripts.Render("~/bundles/chosen")